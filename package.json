    "Vyper",
    "Ethereum",
    "ETH",
    "Truffle",
    "Javascript"
  ],
  "author": "HardlyDifficult",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HardlyDifficult/hardlydifficult-ethereum-contracts/issues"
  },
