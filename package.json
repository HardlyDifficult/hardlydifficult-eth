    "eth-gas-reporter": "0.2.14",
    "ganache-cli": "6.8.2",
    "prettier": "1.19.1",
    "solidity-coverage": "0.7.1",
    "solium": "1.2.5",
    "truffle": "5.1.9",
    "truffle-assertions": "0.9.2"
